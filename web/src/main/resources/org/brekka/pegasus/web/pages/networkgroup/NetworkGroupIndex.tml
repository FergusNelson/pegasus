<html t:type="layout" xmlns:p="tapestry:parameter"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

    
    <h2>Categorized network groups</h2>
    
    <t:pagelink page="networkgroup/create">Create new</t:pagelink>
    
    <t:grid source="groups" row="loopGroup" add="modify" reorder="name,modified,networkGroupCategory,modify" exclude="created">
        <p:modifyCell>
            <t:pagelink page="networkgroup/modify" context="loopGroup.id">Edit</t:pagelink>
        </p:modifyCell>
    </t:grid>

</html>
