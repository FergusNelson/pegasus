<html t:type="layout" xmlns:p="tapestry:parameter"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">
      
      
    <h1>Fetch</h1>
    
    <p>
    	${transfer.bundle.xml.comment}
    </p>
    
    <ul>
	<t:loop source="files" value="file">
		<li>
            <t:if test="file.deleted">
                <span>${file.xml.name} (${file.xml.length} bytes) DELETED count: ${file.downloadCount}</span>
                <p:else>
                    <t:pagelink page="download" context="fileContext">
                        ${file.xml.name} (${file.xml.length} bytes) count: ${file.downloadCount}
                    </t:pagelink>
                </p:else>
            </t:if>
         </li>
	</t:loop>
    </ul>

</html>
