<html t:type="layout" xmlns:p="tapestry:parameter"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

    
    <h2>Inbox '${inbox.name}'</h2>
    
    <span>${inboxLink}</span>
    
    <h3>Deposits</h3>
    <t:grid source="deposits" row="loopDeposit" add="details">
        <p:detailsCell>
            <ul>
                <t:loop source="deposit.xml.bundle.fileList" value="loopFile">
                    <li><t:pagelink page="download" context="fileContext">
                        ${loopFile.name} (${loopFile.length} bytes)</t:pagelink></li>
                </t:loop>
            </ul>
        </p:detailsCell>
    </t:grid>

</html>
