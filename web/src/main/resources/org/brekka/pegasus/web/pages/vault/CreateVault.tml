<html t:type="layout" xmlns:p="tapestry:parameter"
    xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

    <h2>Create vault</h2>

    <t:form t:id="vault">
        <t:errors />
        <div class="field">
            <t:label for="name">Name</t:label>
            <t:textfield t:id="name" validate="required" />
            <p>The name to use for this vault.</p>
        </div>
        
        <div class="field">
            <t:label for="vaultPassword">Vault password</t:label>
            <t:passwordfield t:id="vaultPassword" validate="required,minlength=8" />
            <p>TODO.</p>
        </div>
        
        <div class="field">
            <t:label for="vaultPasswordRepeat">Vault password (repeat)</t:label>
            <t:passwordfield t:id="vaultPasswordRepeat" validate="required,minlength=8" />
            <p>Repeat the password you entered above to ensure that you typed it correctly.</p>
        </div>
        
        <div class="field">
            <label>Submit</label>
            <t:submit value="Create vault" />
        </div>
    </t:form>

</html>
