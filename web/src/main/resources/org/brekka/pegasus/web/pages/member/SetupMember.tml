<html t:type="layout" xmlns:p="tapestry:parameter"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

    <h2>Setup</h2>

	<t:form t:id="setup">
        <t:errors />
		<div class="field">
			<t:label for="name">Name</t:label>
			<t:textfield t:id="name" />
			<p>Your full name</p>
		</div>
		
		<div class="field">
			<t:label for="vaultPassword">Vault password</t:label>
			<t:passwordfield t:id="vaultPassword" />
			<p>TODO.</p>
		</div>
        
        <div class="field">
            <t:label for="vaultPasswordRepeat">Vault password (repeat)</t:label>
            <t:passwordfield t:id="vaultPasswordRepeat" />
        </div>
		
		<div class="field">
			<label>Complete</label>
			<t:submit value="Complete Setup" />
		</div>
	</t:form>

</html>
