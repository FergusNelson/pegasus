<html t:type="layout" xmlns:p="tapestry:parameter"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">
    
    
    <h2>Send to recipient</h2>
    
    <form>
    	<div class="field">
	    	<label>Send via e-mail</label>
	    	<input type="text" class="link" value="${unlockLink}" />
    	</div>
    	<div class="field">
    		<label>Communicate via SMS/Phone</label>
    		<input type="text" class="code" value="${transferKey.code}" />
    	</div>
    </form>
    
    <h2>Direct link</h2>
    
    <form>
    	<div class="field">
	    	<label>Copy to remote system</label>
	    	<input type="text" class="link direct" value="${directLink}" />
    	</div>
    </form>

</html>
