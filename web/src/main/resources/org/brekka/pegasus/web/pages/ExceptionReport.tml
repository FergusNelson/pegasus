<html t:type="layout" xmlns:p="tapestry:parameter"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

	<div id="exception_report">
		<t:if test="showDetails">
			<t:exceptiondisplay exception="exception" />
			<div class="t-env-data">
				<h2>Tapestry Framework</h2>
				<dl>
					<dt>Tapestry Version</dt>
					<dd>${tapestryVersion}</dd>
					<dt>Application Version</dt>
					<dd>${applicationVersion}</dd>
				</dl>
				<h2>Request</h2>
				<t:renderobject object="request" />
			</div>
			<p:else>
                <t:if test="errorSpecificMessage">
                    <t:outputRaw value="${errorSpecificMessage}" />
                    <p:else>
        				<t:outputRaw value="${message:Page.ExceptionReport.instruction}" />
                    </p:else>
                </t:if>
				<span id="error_excl">!</span>
			</p:else>
		</t:if>
	</div>
</html>
